# Environment Variables for EV Charging Station API
# Copy this file to .env and fill in your actual values
# DO NOT COMMIT .env FILE TO VERSION CONTROL

# MongoDB Configuration
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp
MONGODB_DATABASE_NAME=EVChargingDB
MONGODB_BOOKING_COLLECTION=Bookings
MONGODB_CHARGING_STATION_COLLECTION=ChargingStations
MONGODB_EV_OWNER_COLLECTION=EVOwners
MONGODB_USER_COLLECTION=Users

# JWT Configuration
JWT_SECRET=YourSuperSecureSecretKeyThatIsAtLeast32CharactersLong!
JWT_ISSUER=EV_2API
JWT_AUDIENCE=EV_2Frontend
JWT_EXPIRY_MINUTES=60

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
