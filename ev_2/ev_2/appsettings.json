{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",


    "MongoDBSettings": {
        "ConnectionString": "${MONGODB_CONNECTION_STRING}",
        "DatabaseName": "${MONGODB_DATABASE_NAME}",
        "BookingCollectionName": "${MONGODB_BOOKING_COLLECTION}",
        "ChargingStationCollectionName": "${MONGODB_CHARGING_STATION_COLLECTION}",
        "EVOwnerCollectionName": "${MONGODB_EV_OWNER_COLLECTION}",
        "UserCollectionName": "${MONGODB_USER_COLLECTION}"
    },


    "JwtSettings": {
        "Secret": "${JWT_SECRET}",
        "Issuer": "${JWT_ISSUER}",
        "Audience": "${JWT_AUDIENCE}",
        "ExpiryMinutes": "${JWT_EXPIRY_MINUTES}"
    }
}

