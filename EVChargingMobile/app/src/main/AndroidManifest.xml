<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EVChargingMobile"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <!-- Google Maps API Key via manifest placeholder -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${GOOGLE_MAPS_API_KEY}" />

        <!-- Main Activity -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EVChargingMobile.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.AuthActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobile" />

        <activity
            android:name=".ui.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobile" />


        <!-- Operator Activity -->
        <activity
            android:name=".ui.OperatorActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobile" />


            <!-- Dashboard Activity -->
            <activity
                android:name=".ui.dashboard.DashboardActivity"
                android:exported="false"
                android:theme="@style/Theme.EVChargingMobile" />

            <!-- Create Booking Activity -->
            <activity
                android:name=".ui.CreateBookingActivity"
                android:exported="false"
                android:theme="@style/Theme.EVChargingMobile" />

            <!-- Station Selection Activity -->
            <activity
                android:name=".ui.StationSelectionActivity"
                android:exported="false"
                android:theme="@style/Theme.EVChargingMobile" />

        <!-- Station Details Activity -->
        <activity
            android:name=".ui.stations.StationDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobile" />

        <!-- Booking Activity -->
        <activity
            android:name=".ui.bookings.BookingActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobile" />

        <!-- QR Scanner Activity -->
        <activity
            android:name=".ui.operator.QrScannerActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobile" />

        <!-- Maps Activity -->
        <activity
            android:name=".ui.maps.MapsActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobile" />

        <!-- API Test Activity -->
        <activity
            android:name=".ui.APITestActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobile" />

        <!-- Operator Bookings Activity -->
        <activity
            android:name=".ui.OperatorBookingsActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobile" />

    </application>

</manifest>
