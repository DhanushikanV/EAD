<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/operator_nav_graph"
    app:startDestination="@id/navigation_operator_dashboard">

    <fragment
        android:id="@+id/navigation_operator_dashboard"
        android:name="com.evcharging.mobile.ui.operator.OperatorDashboardFragment"
        android:label="Operator Dashboard"
        tools:layout="@layout/fragment_operator_dashboard" />

    <fragment
        android:id="@+id/navigation_operator_bookings"
        android:name="com.evcharging.mobile.ui.bookings.BookingsFragment"
        android:label="Today's Bookings"
        tools:layout="@layout/fragment_bookings" />

    <fragment
        android:id="@+id/navigation_operator_scanner"
        android:name="com.evcharging.mobile.ui.qr.QrScannerFragment"
        android:label="QR Scanner"
        tools:layout="@layout/fragment_qr_scanner" />

    <fragment
        android:id="@+id/navigation_operator_profile"
        android:name="com.evcharging.mobile.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>
